<UserControl x:Class="FantasticAgent.WPF.LLMThreadUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FantasticAgent.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="rectangle"
                            Background="#444"
                            CornerRadius="3" 
                            Height="{TemplateBinding Height}"
                            SnapsToDevicePixels="True"
                            Width="{TemplateBinding Width}"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#666"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="true">
                                <Setter TargetName="rectangle" Property="Background" Value="#66FF66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsPressAndHoldEnabled" Value="false"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="false"/>
            <Setter Property="Background" Value="Transparent"/>

            <Setter Property="Width" Value="6"/>

            <Setter Property="Opacity" Value="0"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineUpCommand}" Opacity="0" IsHitTestVisible="False"/>
                                </Track.DecreaseRepeatButton>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="{x:Static ScrollBar.LineDownCommand}" Opacity="0" IsHitTestVisible="False"/>
                                </Track.IncreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=ScrollViewer}}" Value="True">
                                <Setter Property="Opacity" Value="1"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
            
            
            
            
            
        </Style>

        <Style x:Key="TerminalComboBox" TargetType="ComboBox">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" 
                                      BorderBrush="#444" 
                                      Background="#1A1A1A"
                                      Foreground="{TemplateBinding Foreground}"
                                      Focusable="false"
                                      IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border" CornerRadius="3" Background="#1A1A1A" BorderBrush="#444" BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="5,1" VerticalAlignment="Center" />
                                                <Path Grid.Column="1" Name="Arrow" Fill="#666" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#252525" />
                                                <Setter TargetName="Arrow" Property="Fill" Value="#888" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="#1A1A1A" BorderThickness="1" BorderBrush="#444" CornerRadius="0,0,4,4"/>
                                    <ScrollViewer Margin="2" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="SnapsToDevicePixels" Value="true"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Name="Border" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true" Background="Transparent">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                                <Setter Property="Foreground" Value="#66FF66"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="true">
                                <Setter TargetName="Border" Property="Background" Value="#222"/>
                                <Setter Property="Foreground" Value="#66FF66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>
    <Grid>
        <Border Margin="2" 
                CornerRadius="8"
                Background="#101010" 
                BorderBrush="#333" 
                BorderThickness="1"
                SnapsToDevicePixels="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                    Background="#222" 
                    CornerRadius="8,8,0,0" 
                    Padding="10,6">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Ellipse Width="10" Height="10" 
                             Margin="0,0,8,0"
                             Fill="{Binding IconBrush, RelativeSource={RelativeSource AncestorType=UserControl}}">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="{Binding IconBrush.Color, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                      BlurRadius="8" ShadowDepth="0"/>
                                </Ellipse.Effect>
                            </Ellipse>

                            <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                               FontFamily="Cascadia Mono"
                               FontSize="12"
                               FontWeight="Bold"
                               Foreground="#888"
                               VerticalAlignment="Center"/>
                            <ComboBox Style="{StaticResource TerminalComboBox}" 
                                      Visibility="Collapsed"
                                  Margin="15,0,0,0"
                                  ItemsSource="{Binding AvailableModels, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  SelectedItem="{Binding SelectedModel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                  FontFamily="Cascadia Mono" FontSize="11"/>
                        </StackPanel>

                        <TextBlock Grid.Column="1" 
                           Text="{Binding RemainingBalance, StringFormat='Balance: {0}', RelativeSource={RelativeSource AncestorType=UserControl}}"
                           FontFamily="Cascadia Mono"
                           FontSize="11"
                           Foreground="LightSeaGreen" 
                           VerticalAlignment="Center"
                                   Visibility="Collapsed"
                           Margin="10,0,0,0"/>



                    </Grid>
                </Border>
                
                <Grid>
                    <ProgressBar VerticalAlignment="Bottom"
                                 Height="2"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 Foreground="{Binding IconBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                 IsIndeterminate="True"
                                 Grid.ColumnSpan="2">

                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                </Grid>

                <ScrollViewer x:Name="TerminalScroll" 
                              Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              Margin="6">
                    <TextBlock x:Name="OutputBox"
                               TextWrapping="Wrap"
                               FontFamily="Cascadia Mono"
                               FontSize="13"
                               Foreground="#66FF66"
                               LineHeight="18"
                               />
                </ScrollViewer>

                <Border Grid.Row="2" 
                    Background="#1A1A1A" 
                    BorderBrush="#333" 
                    BorderThickness="0,1,0,0" 
                    Padding="10,4"
                    CornerRadius="0,0,8,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <TextBlock Text="READY" 
                       FontFamily="Cascadia Mono" 
                       FontSize="10" 
                       Foreground="#444" 
                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">


                            <TextBlock Text="{Binding CallCount, StringFormat='TOOL CALLS: {0}', RelativeSource={RelativeSource AncestorType=UserControl}}"
                                   FontFamily="Cascadia Mono" 
                                   FontSize="11" 
                                   Foreground="#666" 
                                   VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
